#include <stdio.h>
#include <stdlib.h>

int main()
{
    // decleration the variables
    int n ;
    // get n from the user
    printf("please enter thee size you want :   ");
    scanf("%d", &n );
    printf("\n---------------------------------------------\n");
    // drow the stirs
    // basic foor loop
    for( int i = 1 ; i < n+1 ; i++)
        {
            // for loop to spaces
        for(int j = 1; j <= n-i; j++)
            {
            printf(" ");
            }
            // for loop for padges
        for(int x = i; x>0 ; x--)
            {
            printf("#");
        }
        printf("\n");
        }
  return  0 ;
}
